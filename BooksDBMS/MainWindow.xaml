<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BooksDBMS"
        xmlns:Custom="http://schemas.microsoft.com/wpf/2008/toolkit" x:Class="BooksDBMS.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="530" Width="594">

    <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="280" Margin="57,26,0,0" VerticalAlignment="Top" Width="458"  >
        <TabItem Header="Книги">
            <Grid Background="#FFE5E5E5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="83*"/>
                    <ColumnDefinition Width="369*"/>
                </Grid.ColumnDefinitions>
                <Custom:SelectiveScrollingGrid Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="67,107,0,0" VerticalAlignment="Top" Width="100"/>
            </Grid>
        </TabItem>
        <TabItem Header="Издательства" Height="22" VerticalAlignment="Top" Margin="-2,0" Selector.Selected="OnPublistSelect">
            <Grid Background="#FFE5E5E5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="73*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Margin="34,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.754,0.59"/>
                <Custom:DataGrid x:Name="publishersDataGrid" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="214" Width="432" AutoGenerateColumns="True" ItemsSource="{Binding}" AutoGeneratingColumn="publishersDataGrid_AutoGeneratingColumn" RowEditEnding="publishersDataGrid_RowEditEnding"/>
            </Grid>
        </TabItem>
        <TabItem Header="Авторы" Height="22" VerticalAlignment="Top" Margin="-2,0">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
    </TabControl>


</Window>
